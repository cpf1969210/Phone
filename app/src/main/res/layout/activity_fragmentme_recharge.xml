<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ho_place">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/StrongBlue"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="快捷充值"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/edtext1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:hint="请输入手机号码"
        android:textColorHint="@color/DarkGray"
        android:background="@drawable/border_shape2"/>
    <EditText
        android:id="@+id/edtext2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="请输入充值卡号"
        android:textColorHint="@color/DarkGray"
        android:background="@drawable/border_shape2"/>
    <EditText
        android:id="@+id/edtext3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:hint="请输入充值卡密码"
        android:textColorHint="@color/DarkGray"
        android:background="@drawable/border_shape2"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/StrongBlue"
        android:text="充值"
        android:textSize="30sp"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal" />
</LinearLayout>